page{
  height: 100%;
}
.z-main{
  box-sizing: border-box;
  padding-bottom: 300rpx;
  height: 100%;
}
.z-content{
  height: 100%;
  overflow-y: auto;
}
.z-reply-txt{
  box-sizing: border-box;
  height: 99rpx;
  line-height: 99rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 30rpx;
  color:#333;
  font-size: 30rpx;
}
.z-add-reply{
  padding: 20rpx 40rpx 0;
}
.z-add-popup{
  width:100%;
  height: 100%;
  position: fixed;
  background:rgba(0,0,0,0.5);
  left: 0;
  top:0;
}
.z-add-content{
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  width:600rpx;
  height: auto;
}
.z-add-title{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color:#333;
}
.z-add-input{
  padding: 40rpx 40rpx;
}
.z-add-input input{
  outline: none;
  border:1px solid #ccc;
  width:100%;
  height: 80rpx;
  color:#333;
  font-size: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.z-add-btns{
  height: 100rpx;
  width:100%;
  border-top:1rpx solid #e5e5e5;
  text-align: center;
  font-size: 38rpx;
  color:#999;
  line-height: 100rpx;
}
.z-add-comfirm{
  color:#333;
  border-left: 1rpx solid #e5e5e5;
}
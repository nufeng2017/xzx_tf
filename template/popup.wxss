.popup_bg{
    position: fixed;
    background: rgba(0,0,0,0.4);
    top: 0px;
    left: 0px;
    z-index: 10000;
    height: 100%;
    width: 100%;
}
.popup{
    width: 80%;
    background: #fff;
    position: absolute;
    left: 10%;
    top: 48%;
    border-radius: 8rpx;
    line-height: 56rpx;
    transform: translateY(-50%);
    padding-bottom: 92rpx;
}
.popup .title{
    font-size: 30rpx;
    color: #333;
    margin: 28rpx 0 12rpx 0;
    text-align: center;
    font-weight: bolder;
}
.popup .popup_body{
    font-size: 30rpx;
    color: #666;
    line-height: 60rpx;
    padding: 0 56rpx;
    margin: 40rpx 0;
    max-height: 320rpx;
    overflow: auto;
}
.popup .popup_footer{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid #eaeaea;
    display: flex;
}
.popup .popup_footer view{
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}
.popup .popup_footer view:first-child{
    border-right: 1rpx solid #eaeaea;
}
.popup .popup_footer view.color{
    color: rgb(248,182,44);
}
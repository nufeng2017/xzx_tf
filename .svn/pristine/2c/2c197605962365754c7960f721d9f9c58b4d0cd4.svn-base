<view class="hui-wrap">
  <view class="hui-show-img-board flex flex-center">
    <canvas style="width:100%; height: 100%;" canvas-id="canvasImg" id="canvasImg"></canvas>
  </view>
  <view class="hui-edit-btn">
    <view class="flex hui-flex-justify hui-flex-align-center">
      <view class="hui-cancel-btn">取消</view>
      <view class="hui-left-btn">
        <image src="/taofang-package/img/left-rotate-icon.png" mode="widthFix"></image>
        <view>左旋转</view>
      </view>
      <view class="hui-right-btn">
        <image src="/taofang-package/img/right-rotate-icon.png" mode="widthFix"></image>
        <view>右旋转</view>
      </view>
      <view class="hui-ok-btn hui-change-image">完成</view>
    </view>
  </view>
</view>
<image src="../../img/test-img.png" mode="widthFix" class="hui-img-box" bindload="getImageInfo" id="img" ></image>
/* pages/my_collection.wxss */
@import "../../template/custom.wxss";

page {
  background: #efeff4;
}

.collection-container {
  background: white;
  white-space: nowrap;
  overflow: hidden;
}

.collection-container .list_item_out {
  border-top: none;
  border-bottom: 1rpx solid #e5e5e5;
  height:240rpx;
  margin:0;
  width:100%;
  box-sizing: border-box;
  padding: 0 38rpx;
}

.collection-container navigator:last-child .list_item_out {
  border-bottom: none;
}

.collection-container .item navigator {
  display: inline-block;
  width: 750rpx;
  height: 240rpx;
  /* float: left; */
}

.collection-container .item {
  position: relative;
  transition: all 0.3s;
  /* display: block; */
  white-space: nowrap;
  display: flex;
  height: 240rpx;
  align-items: center;
  width:100%;
}

.collection-container .delete {
  width: 178rpx;
  height: 240rpx;
  display: inline-block;
  background: #f34343;
  color: white;
  text-align: center;
  font-size: 32rpx;
  line-height: 240rpx;
}

.list_item .item_image .offline_tip {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 70rpx;
  height: 28rpx;
  color: #fff;
  background: #999;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
}

.offline .list_hang1 text, .offline .list_hang2 text, .offline .list_hang3 text {
  color: #ccc;
}
.z-tabs{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}
.z-tabs .z-tab{
  padding: 0 20rpx;
}
.z-tab-active{
  color:#ff9000;
  font-weight: 900;
  position: relative;
}
.z-tab-active:after{
  content: '';
  height: 6rpx;
  background: #ffa229;
  width:80%;
  bottom: 0;
  left: 10%;
  position: absolute;
}
.list_item{
  margin-right: 0;
}
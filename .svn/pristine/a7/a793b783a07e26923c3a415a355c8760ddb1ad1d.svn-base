@import '/app.wxss';
.z-component-search{
  width:100%;
  height: 84rpx;
  padding-top: 20rpx;
  background: #fff;
  position: relative;
  z-index: 100;
  box-sizing:content-box !important;
}
.z-component-search .z-component-search-input-box{
  height: 100%;
}
.z-component-search .z-component-search-input-box{
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 0 20rpx 0 66rpx;
  position: relative;
  border:1px solid #f4f5f5;
  box-shadow: 0 0 5rpx 2rpx rgba(0,0,0,0.1);
}
.z-component-search .z-component-search-input-box .z-serch-icon{
  position: absolute;
  width:66rpx;
  height: 100%;
  top:0;
  left:0rpx;
}
.z-component-search .z-component-search-input-box .z-serch-icon image{
  width:34rpx;
  height: 34rpx;
}
.z-component-search .z-component-search-input-box input{
  height: 100%;
  font-size: 24rpx;
  width:100%;
}
.z-component-search-style-1{
  height: 66rpx;
}
.z-component-search-style-1 .z-component-search-input-box{
  box-shadow:none;
  background: #f3f3f3;
}
.z-component-search-cancel{
  width:110rpx;
  text-align: center;
  font-size: 28rpx;
  height: 100%;
}
.z-component-search-cancel:after{
  content: '';
  display: inline-block;
  width:0;
  height: 10rpx;
  vertical-align: 110%;
}
.z-component-search-msg{
  position: relative;
}
.z-component-search-msg .z-component-search-msg-img{
  width:56rpx;
  height: 56rpx;
  margin-top: 12rpx;
}
.z-unread-info{
  font-size: 20rpx;
  height: 30rpx;
  min-width: 30rpx;
  line-height: 30rpx;
  color:#fff;
  text-align: center;
  padding: 0 6rpx;
  background: red;
  position: absolute;
  top:0;
  right: 0;
  box-sizing: border-box;
  border-radius: 50rpx;
}
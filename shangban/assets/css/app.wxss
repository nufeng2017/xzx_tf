/* 商办公共样式 */

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.z-wrap{
  padding: 0 38rpx;
}
image{
  width:100%;
  height: 100%;
}
.z-cl:after {
  content: '';
  display: block;
  height: 0px;
  width: 0px;
  line-height: 0px;
  clear: both;
}

.z-fl {
  float: left;
}

.z-fr {
  float: right;
}
/* iphone底部样式 */
.z-iphonex{
  padding-bottom: 68rpx;
}
/*文字隐藏*/
.z-text-hidden {
  overflow: hidden;
  white-space: nowrap;
  word-break: normal;
  text-overflow: ellipsis;
}
/*弹性模式*/

.z-flex {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -o-box;
  display: -moz-box;
  display: -webkit-flex;
  display: flex ;
  display: -o-flex;
  display: -moz-flex;
}
.z-flex-item {
  -moz-box-flex: 1;
  -o-box-flex: 1;
  -webkit-box-flex: 1;
  box-flex: 1;
  -webkit-flex: 1;
  -o-flex: 1;
  -moz-flex: 1;
  flex: 1;
}

/*上下左右居中*/
.z-flex-center {
  justify-content: center;
  -moz-justify-content: center;
  -o-justify-content: center;
  -ms-justify-content: center;
  align-items: center;
  -moz-align-items: center;
  -o-align-items: center;
  -ms-align-items: center;
  box-align: center;
  box-pack: center;
  -webkit-box-align: center;
  -webkit-box-pack: center;
  -o-box-align: center;
  -moz-box-align: center;
  -o-box-pack: center;
  -moz-box-pack: center;
}

/*左右居中*/
.z-flex-align-center{
  justify-content: center;
	-moz-justify-content: center;
	-o-justify-content: center;
	-ms-justify-content: center;
}

/*上下居中*/
.z-flex-line-center {
  align-items: center;
  -moz-align-items: center;
  -o-align-items: center;
  -ms-align-items: center;
  box-align: center;
  -webkit-box-align: center;
  -o-box-align: center;
  -moz-box-align: center;
}

/*两边分布*/
.z-flex-justify {
  justify-content: space-between;
  -moz-justify-content: space-between;
  -o-justify-content: space-between;
  -ms-justify-content: space-between;
  box-pack: justify;
  -webkit-box-pack: justify;
  -o-box-pack: justify;
  -moz-box-pack: justifyr;
}

.z-flex-direction {
  flex-direction: column;
  -webkit-flex-direction: column;
  -o-flex-direction: flex-direction;
  -moz-flex-direction: column;
  -ms-flex-direction: column;
  box-orient: vertical;
  -webkit-box-orient: vertical;
  -moz-box-orient: vertical;
  -ms-box-orient: vertical;
  -o-box-orient: vertical;
}
/* 列表项特色 */
.z-components-item-characteristic>view{
  padding: 0 12rpx;
  height: 30rpx;
  line-height: 30rpx;
  color:#90aed4;
  background: #f3f8ff;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 4rpx;
  overflow: hidden;
  display: inline-block;
  font-size: 20rpx;
  position: relative;
  vertical-align: top;
}
/* 列表项价格 */
.z-view-item-price .z-view-item-price1{
  margin-right: 25rpx;
  color:#ff9000;
  font-size: 30rpx;
  font-weight: 900;
}
.z-view-item-price .z-view-item-price1 .z-price-unit{
  font-size: 20rpx;
  font-weight: 400;
}
.z-view-item-price .z-view-item-price2{
  font-size: 20rpx;
  color:#999999;
}

/* 按钮 */
.z-btn-class{
  border-radius: 4rpx;
  background: #f9f9f9;
  font-size: 30rpx;
  color:#666;
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  border:none;
  outline: none;
}
.z-btn-class:after,.z-btn-class::before{
  border:none;
  outline: none;
  background: transparent;
}
.z-btn-class.z-btn-class-1{
  background: #ffa229;
  color:#fff;
  font-weight: 900;
  font-size: 36rpx;
}
/* 筛选弹窗按钮 */
.z-component-area-btn{
  height: 125rpx;
  position: absolute;
  width:100%;
  text-align: center;
  left:0;
  bottom: 0;
  padding-top: 22rpx;
  box-sizing: border-box;
  border-top: 1px solid #f2f2f2;
}
.z-component-area-btn .z-btn-class{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 12rpx;
  background: #f2f2f2;
  color:#999999;
  width:348rpx;
}
.z-component-area-btn .z-btn-class:last-child{
  margin-right: 0;
  background: #ffa229;
  color:#fff;
}

/* 无数据 */
.z-none-data{
  width:100%;
  height: 100%;
  min-height: 300rpx;
}
.z-none-data image{
  width:143rpx;
  height: 160rpx;
}
.z-hot-house{
  display: inline-block;
  margin-right: 22rpx;
  height: 100%;
  width:290rpx;
}
.z-hot-house-img{
  width:100%;
  height: 215rpx;
  border-radius: 4rpx;
  overflow: hidden;
  background: #ccc;
}
.z-hot-house-img van-image{
  width:100%;
  height: 100%;
}
